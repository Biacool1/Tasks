@model TestTaskTwo.Models.PizzaModel

<html lang="ru">
<head>
    <meta charset="utf-8">
</head>
<body>
    <div class="Pizza"><h1>Пиццы</h1></div>
    <div class="my-flex-container">
       
            <div class="item">  
            <img src="@(Url.Content("~/images/" + @Model.Image))" class="image">
                <h2>@Model.Name</h2>
                <h6>@Model.Ingredients</h6>
               
                @if (@Model.Price == "Временно недоступно")
                {
                <div class="price">@Model.Price </div>
                }
                else
                {
                <div class="price">@Model.Price₽ </div>
                }
            </div>
    </div>
</body>
</html>
